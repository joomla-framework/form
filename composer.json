{
    "name": "joomla/form",
    "type": "joomla-package",
    "description": "Joomla Form Package",
    "keywords": ["joomla", "framework", "form"],
    "homepage": "https://github.com/joomla-framework/form",
    "license": "GPL-2.0+",
    "require": {
        "php": ">=5.3.10",
        "joomla/language": "2.0.*@dev",
        "joomla/string": "~1.3|2.0.*@dev",
        "joomla/uri": "~1.0",
        "joomla/filter": "~1.0",
        "joomla/filesystem": "~1.0",
        "joomla/registry": "~1.0|2.0.*@dev",
        "joomla/utilities": "~1.0"
    },
    "require-dev": {
        "joomla/database": "~1.0",
        "joomla/test": "~1.0",
        "phpunit/phpunit": "~4.1.0",
        "phpunit/dbunit": "~1.0",
        "squizlabs/php_codesniffer": "1.*"
    },
    "suggest": {
        "joomla/database": "Install joomla/database if you would like to use the DatabaseConnection field type."
    },
    "autoload": {
        "psr-4": {
            "Joomla\\Form\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Joomla\\Form\\Tests\\": "Tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    },
    "prefer-stable": true
}
